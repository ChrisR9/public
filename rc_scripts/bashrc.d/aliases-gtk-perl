#!/bin/bash
# git aliases
GIT_EXCLUDES="archived"
GIT_PATH="/Users/brian/src/gtk-perl"
alias gtkrefchk="/bin/sh ~/bin/git-tool.sh --path=${GIT_PATH} \
    --exclude \"${GIT_EXCLUDES}\" refchk"
# these next two are the same
alias gtkstat="/bin/sh ~/bin/git-tool.sh --path=${GIT_PATH} \
    --exclude \"${GIT_EXCLUDES}\" repostat"
alias gtkrepostat="/bin/sh ~/bin/git-tool.sh --path=${GIT_PATH} \
    --exclude \"${GIT_EXCLUDES}\" repostat"
alias gtkinchk="/bin/sh ~/bin/git-tool.sh --path=${GIT_PATH} \
    --exclude \"${GIT_EXCLUDES}\" inchk"
alias gtkoutchk="/bin/sh ~/bin/git-tool.sh --path=${GIT_PATH} \
    --exclude \"${GIT_EXCLUDES}\" outchk"
alias gtkpullall="/bin/sh ~/bin/git-tool.sh --path=${GIT_PATH} \
    --exclude \"${GIT_EXCLUDES}\" pullorigin"
alias gtkpullgh="/bin/sh ~/bin/git-tool.sh --path=${GIT_PATH} \
    --exclude \"${GIT_EXCLUDES}\" pullgithub"
alias gtkupdatechk="/bin/sh ~/bin/git-tool.sh --path=${GIT_PATH} \
    --exclude \"${GIT_EXCLUDES}\" updatechk"
alias gtkcolorchk="/bin/sh ~/bin/git-tool.sh --colorize --path=${GIT_PATH} \
    --exclude \"${GIT_EXCLUDES}\" updatechk"
unset GIT_PATH GIT_EXCLUDES
# vi: set filetype=sh shiftwidth=4 tabstop=4
# fin!
